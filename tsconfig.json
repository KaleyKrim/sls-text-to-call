{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2018",
    "outDir": "build",
    "rootDir": "src",
	"experimentalDecorators": true,
	// global runtime types
	"types": ["@twilio-labs/serverless-runtime-types"]
  },
  "exclude": ["build"]
}
